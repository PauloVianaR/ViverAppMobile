<ContentView
    x:Class="ViverAppMobile.Controls.CustomTimePicker"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Border
        Padding="5,-5,5,-5"
        BackgroundColor="#F7F7F7"
        Stroke="#eee"
        StrokeShape="RoundRectangle 8"
        StrokeThickness="1">
        <Grid
            BackgroundColor="Transparent"
            ColumnDefinitions="Auto,*,Auto"
            VerticalOptions="Center">

            <Label
                x:Name="TimeLabel"
                BackgroundColor="Transparent"
                FontSize="14"
                Text="--:--"
                TextColor="Black"
                VerticalOptions="Center" />

            <Label
                Grid.Column="1"
                BackgroundColor="Transparent"
                FontFamily="AppIcons"
                FontSize="14"
                HorizontalOptions="End"
                Text="&#xe801;"
                VerticalOptions="Center" />

            <TimePicker
                x:Name="NativeTimePicker"
                Grid.ColumnSpan="2"
                BackgroundColor="Transparent"
                HeightRequest="0"
                HorizontalOptions="Fill"
                Opacity="0"
                PropertyChanged="NativeTimePicker_PropertyChanged"
                Time="08:00:00"
                WidthRequest="0" />
        </Grid>
    </Border>
</ContentView>
