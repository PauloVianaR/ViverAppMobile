<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ViverAppMobile.Controls.SkeletonControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">
    <ContentView.Resources>
        <LinearGradientBrush x:Key="ShimmerBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop x:Name="stop1" Offset="-1" Color="#F5F6F8" />
            <GradientStop x:Name="stop2" Offset="-0.5" Color="#E0E0E4" />
            <GradientStop x:Name="stop3" Offset="0" Color="#F5F6F8" />
        </LinearGradientBrush>
    </ContentView.Resources>

    <Grid>
        <ContentPresenter x:Name="Presenter" />
        <BoxView
            x:Name="DefaultBox"
            Background="{StaticResource ShimmerBrush}"
            CornerRadius="6"
            IsVisible="False" />
    </Grid>
</ContentView>