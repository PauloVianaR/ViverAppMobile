<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ViverAppMobile.Controls.CustomSwitch"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="This">

    <Grid
        x:Name="Root"
        HeightRequest="{Binding SwitchHeight, Source={x:Reference This}}"
        HorizontalOptions="Start"
        VerticalOptions="Center"
        WidthRequest="{Binding SwitchWidth, Source={x:Reference This}}">

        <!--  Track  -->
        <Border
            x:Name="Track"
            HorizontalOptions="Fill"
            StrokeThickness="1"
            VerticalOptions="Fill">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="{Binding SwitchHeight, Source={x:Reference This}}" />
            </Border.StrokeShape>
        </Border>

        <!--  Thumb (bolinha)  -->
        <Border
            x:Name="Thumb"
            Margin="-2,0,2,0"
            HeightRequest="{Binding ThumbSize, Source={x:Reference This}}"
            HorizontalOptions="Start"
            StrokeThickness="0"
            VerticalOptions="Center"
            WidthRequest="{Binding ThumbSize, Source={x:Reference This}}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="{Binding ThumbSize, Source={x:Reference This}}" />
            </Border.StrokeShape>
        </Border>
    </Grid>
</ContentView>
